<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_bus"
        android:layout_width="@dimen/button_dimen"
        android:layout_height="@dimen/button_dimen"
        android:layout_alignParentStart="true"
        tools:background="@drawable/trolleybus_blue" />

    <TextView
        android:id="@+id/text_line_bus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/image_bus"
        android:background="@drawable/border_blue"
        android:textSize="25dp"
        tools:text=" 3 " />

    <TextView
        android:id="@+id/text_line_bus_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        tools:text="@string/time_3"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/button_show_bus_info"
        android:layout_marginEnd="44dp" />

    <Button
        android:id="@+id/button_show_bus_info"
        android:layout_width="@dimen/button_dimen"
        android:layout_height="@dimen/button_dimen"
        android:layout_alignParentEnd="true"
        android:background="@drawable/arrow_right_blue" />


</RelativeLayout>