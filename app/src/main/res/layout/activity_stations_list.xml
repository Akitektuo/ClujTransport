<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.StationsListActivity">

    <ImageView
        android:id="@+id/image_search_background_list_stations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/buttons_space"
        android:background="@drawable/bar_blue"
        android:paddingTop="@dimen/button_dimen" />

    <AutoCompleteTextView
        android:id="@+id/edit_text_stations_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_search_background_list_stations"
        android:layout_centerHorizontal="true"
        android:hint="@string/search"
        android:textAlignment="center"
        android:layout_toEndOf="@+id/button_stations_back"
        android:layout_toStartOf="@+id/button_stations_search"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray" />

    <Button
        android:id="@+id/button_stations_back"
        android:layout_width="@dimen/button_dimen"
        android:layout_height="@dimen/button_dimen"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/back_white"
        android:clickable="true" />

    <Button
        android:id="@+id/button_stations_search"
        android:layout_width="@dimen/button_dimen"
        android:layout_height="@dimen/button_dimen"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/search_white"
        android:clickable="true" />

    <ListView
        android:id="@+id/list_stations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_list"
        android:layout_marginRight="@dimen/padding_list"
        android:dividerHeight="@dimen/padding_list"
        android:divider="@null"
        android:scrollbars="none"
        android:layout_below="@+id/image_search_background_list_stations" />

</RelativeLayout>
